    <Window x:Class="Lab_25.AddOrderWindow"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            Title="Додати замовлення" Height="350" Width="450">
        <Grid>
            <StackPanel>
                <ComboBox Name="ClientComboBox" Margin="10" FontSize="16"/>
                <TextBox Name="BookingTimeTextBox" Margin="10" FontSize="16" Foreground="Gray" Text="Час бронювання" GotFocus="RemoveText" LostFocus="AddText"/>
                <TextBox Name="ServiceTypeTextBox" Margin="10" FontSize="16" Foreground="Gray" Text="Тип послуги" GotFocus="RemoveText" LostFocus="AddText"/>
                <TextBox Name="OrderStatusTextBox" Margin="10" FontSize="16" Foreground="Gray" Text="Статус замовлення" GotFocus="RemoveText" LostFocus="AddText"/>
                <Button Content="Додати" Click="AddOrderButton_Click" Margin="10" FontSize="16"/>
            </StackPanel>
        </Grid>
    </Window>